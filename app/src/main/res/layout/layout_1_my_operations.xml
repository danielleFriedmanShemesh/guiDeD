<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:id="@+id/layout_1_my_operations"
    android:backgroundTint="@color/grayeen3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clOp1"
        android:layoutDirection="ltr"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/topic1"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textDirection="rtl"
            android:fontFamily="@font/yardenboldalefalefalef"
            android:text="שם הפעולה"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/yardenregularalefalefalef"
            android:text="אורך פעולה"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/topic1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topic1" />

        <TextView
            android:id="@+id/ageOp1"
            android:layout_width="56dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/yardenregularalefalefalef"
            android:text="גיל"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topic1" />

        <TextView
            android:id="@+id/goals1"
            android:layout_width="119dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/yardenregularalefalefalef"
            android:text="מטרות"
            android:textDirection="rtl"
            android:textSize="20dp"
            app:cornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/ageOp1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ageOp1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>