<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GuiDeD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:itemTextAppearance">@style/CustomMenu</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#505050</item>
        <!-- replace with your color -->

    </style>

    <style name="Theme.GuiDeD" parent="Base.Theme.GuiDeD" />
    
    <style name="CustomMenu" parent="TextAppearance.AppCompat.Menu">
        <item name="fontFamily">yardenboldalefalefalef</item>
        <item name="android:background">@color/grayeen1.5</item>
        <item name="itemBackground">@color/grayeen1.5</item>
        <item name="android:textDirection">rtl</item>
    </style>
    <style name="AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:backgroundTint"> @color/grayeen1.5</item>
        <item name="android:colorBackground">@color/grayeen1.5</item>
        <item name="alertDialogCenterButtons">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/yardenregularalefalefalef</item>
        <item name="android:textSize">20dp</item>

        <item name="android:layout_gravity">center</item>
    </style>

</resources>