<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_num_one"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    >


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:paddingHorizontal="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/registerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="הרשמה לאתר"
        android:layout_gravity="center"
        android:textSize="45dp"
        android:fontFamily="@font/yardenboldalefalefalef"
        />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/yardenboldalefalefalef"
        android:hint="שם משתמש"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/alartUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/yardenboldalefalefalef"
        android:text="" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="סיסמה"
        android:textSize="30dp"
        android:id="@+id/password"
        android:fontFamily="@font/yardenboldalefalefalef"
        />

    <TextView
        android:id="@+id/alartPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:fontFamily="@font/yardenboldalefalefalef"
        />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:hint="אימייל"
        android:textSize="30dp"
        android:id="@+id/email"
        android:fontFamily="@font/yardenboldalefalefalef"
        />

    <TextView
        android:id="@+id/alartEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:fontFamily="@font/yardenboldalefalefalef"

        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:fontFamily="@font/yardenboldalefalefalef"

        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/continueBTN"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="-20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="-30dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/better_sign_continue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>